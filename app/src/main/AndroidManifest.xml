<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/happy_watermelon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/happy_watermelon"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.ZandiaKt"
        tools:targetApi="31">
        <activity android:name=".splash.SplashActivity"
            android:theme="@style/Theme.ZandiaLogo.Fullscreen"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" android:theme="@style/Theme.ZandiaKt"/>
    </application>

</manifest>
